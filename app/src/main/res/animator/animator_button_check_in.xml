<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <objectAnimator
                android:duration="@integer/button_duration"
                android:propertyName="textColor"
                android:valueFrom="@color/white"
                android:valueTo="@color/black"
                android:valueType="colorType" />
            <objectAnimator
                android:duration="@integer/button_duration"
                android:propertyName="backgroundColor"
                android:valueFrom="@color/blue"
                android:valueTo="@color/gold"
                android:valueType="colorType" />
            <objectAnimator
                android:duration="@integer/button_duration"
                android:propertyName="translationZ"
                android:valueTo="6dp"
                android:valueType="floatType" />
            <objectAnimator
                android:duration="@integer/button_duration"
                android:propertyName="translationY"
                android:valueTo="10dp"
                android:valueType="floatType" />


        </set>
    </item>

    <item android:state_pressed="false">
        <set>
            <objectAnimator
                android:duration="@integer/button_duration"
                android:propertyName="textColor"
                android:valueFrom="@color/black"
                android:valueTo="@color/white"
                android:valueType="colorType" />


            <objectAnimator
                android:duration="@integer/button_duration"
                android:propertyName="backgroundColor"
                android:valueFrom="@color/gold"
                android:valueTo="@color/blue"
                android:valueType="colorType" />

            <objectAnimator
                android:duration="@integer/button_duration"
                android:propertyName="translationZ"
                android:valueTo="0dp"
                android:valueType="floatType" />
            <objectAnimator
                android:duration="@integer/button_duration"
                android:propertyName="translationY"
                android:valueTo="0dp"
                android:valueType="floatType" />
        </set>

    </item>


</selector>